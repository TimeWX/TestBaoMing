.container {
  padding-bottom: 45px;
}

.title {
  width: 92%;
  padding: 3% 4%;
  background: #fffbf7;
  color: #666;
  font-size: 24rpx;
  text-align: center;
  border-bottom: 2rpx dashed #ffe0c4;
}

.title text {
  width: 100%;
  display: block;
}

.body {
  width: 92%;
  margin: 0 auto;
}

.publish-user-time {
  display: flex;
  border-top: 2rpx #f4f4f4 solid;
  padding: 15rpx 5%;
  width: 90%;
  border-bottom: 2rpx #f4f4f4 solid;
}

.publish-user {
  flex: 4;
  height: 60rpx;
  overflow: hidden;
}

.publish-user image {
  width: 52rpx;
  height: 52rpx;
  border: 2rpx #e3e3e3 solid;
  padding: 2rpx;
  background: #fff;
}

.publish-user text {
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  position: absolute;
  overflow: hidden;
  color: #666;
  font-size: 10pt;
}

.publish-time {
  flex: 2;
  text-align: right;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 24rpx;
}

.content {
  margin: 0 auto;
  width: 100%;
}

.content-title {
  width: 100%;
  margin-bottom: 20rpx;
  font-size: 16px;
  padding-top: 10px;
}

.content-title label {
  width: 100%;
  display: block;
  padding-bottom: 5px;
  font-size: 10pt;
  color: #999;
}

.content-photo {
  width: 100%;
  text-align: center;
  display: block;
  margin-bottom: 10px;
}

/* 获取当前位置 */

.position {
  width: 92%;
  background: #fff;
  padding: 3% 4%;
  font-size: 12px;
  color: #c1c1c1;
  text-align: right;
}

.position image {
  width: 2%;
  margin-left: 13rpx;
}

/* 转发按钮 */

.signUp {
  width: 90%;
  padding: 3% 5%;
  background: #fafafa;
}

.signUp button {
  border-radius: 50px;
  background: #ff8840;
  font-size: 15px;
  color: #fff;
  border: 0;
}

.signUp button::after {
  border: 0;
}

/* 报名列表 */

.userJoin {
  width: 100%;
  display: block;
}

.userJoin label {
  width: 90%;
  font-size: 14px;
  padding: 3% 5%;
  display: block;
  border-bottom: 2rpx #f4f4f4 solid;
  color: #999;
}

.users {
  width: 90%;
  padding: 3% 0;
  font-size: 14px;
  margin: 0 5%;
  display: flex;
  border-bottom: 2rpx #f4f4f4 solid;
}

.userName {
  flex: 1;
  color: #333;
}

.userTel {
  flex: 1;
  text-align: right;
  color: #666;
}

.date {
  width: 100%;
  border-bottom: 2rpx #f4f4f4 solid;
  padding: 3% 0;
  font-size: 14px;
}

.date label {
  color: #666;
}

.tel{
  text-decoration-line: underline;
}
