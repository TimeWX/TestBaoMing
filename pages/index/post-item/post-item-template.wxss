.post-container {
  width: 86%;
  height: auto;
  background: #fff;
  margin: 0 3% 20rpx 3%;
  padding: 4%;
}

.post-user-date {
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
  margin-bottom: 10rpx;
}

.post-user {
  flex: 6;
  height: 80rpx;
  overflow: hidden;
}

.post-user image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 2rpx #e3e3e3 solid;
  padding: 2rpx;
  background: #fff;
}

.post-user text {
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
  position: absolute;
  overflow: hidden;
  color: #666;
  font-size: 12pt;
}

.post-title {
  width: 100%;
  color: #333;
}

.post-photo {
  width: 100%;
  height: 350rpx;
  padding-top: 20rpx;
}

.post-photo image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.post-date {
  flex: 1;
  text-align: left;
  height: 50rpx;
  line-height: 50rpx;
  color: #b4b4b4;
  margin-top: 15rpx;
  font-size: 15px;
  border-right: 6rpx #fda40f solid;
}

.post-participants-time {
  font-size: 26rpx;
  color: #cdcdcd;
  width: 100%;
  padding-top: 20rpx;
  border-top: 2rpx #f5f5f5 solid;
  margin-top: 40rpx;
  display: flex;
}

.post-participants {
  flex: 1;
  text-align: left;
  overflow: hidden;
}

.post-participants image {
  width: 18px;
  height: 18px;
  padding-right: 8rpx;
}

.post-time {
  flex: 1;
  text-align: right;
  overflow: hidden;
}

.post-timee image {
  width: 18px;
  height: 18px;
  padding-right: 8rpx;
}
